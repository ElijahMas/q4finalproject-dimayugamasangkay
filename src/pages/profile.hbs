<body>
  <!-- Header -->
<header>
  <div class="header-left">
    <a href="/profile">About you</a>
  </div>
  <img src="https://cdn.glitch.global/1a3379af-7699-458d-bdf8-9fd8f47a5f59/829410b6-f419-4107-a5b3-b2e60e45bf51.image.png?v=1734690946050" alt="FitFormula Icon" class="header-icon">
  <h1>FitFormula</h1>
  <div class="header-right">
    <a href="/login">Login</a>
  </div>
</header>

<main class="profile-page">
<div class="profile-card">
  <h2>Welcome, {{user.username}}</h2>
  <p><strong>Email:</strong> {{user.email}}</p>
{{#if userInfo}}
  <h2>Your Fitness Summary</h2>
  <p><strong>Height:</strong> {{userInfo.height}} cm</p>
  <p><strong>Weight:</strong> {{userInfo.weight}} kg</p>
  <p><strong>Age:</strong> {{userInfo.age}}</p>
  <p><strong>Health Issues:</strong> {{userInfo.healthIssues}}</p>
  <p><strong>BMI:</strong> {{userInfo.bmi}}</p>
  <p><strong>Classification:</strong> {{userInfo.classification}}</p>
  <p><strong>Fitness Indicator:</strong> {{userInfo.plan}}</p>
  <div id="display-plan">
  {{#if userInfo.exercisePlan}}
  <div>{{{userInfo.exercisePlan}}}</div>
    {{else}}
      <p>No plan saved yet.</p>
    {{/if}}
    {{else}}
      <p>No fitness data saved yet.</p>
    {{/if}}
  </div>
</div>
</main>

  
